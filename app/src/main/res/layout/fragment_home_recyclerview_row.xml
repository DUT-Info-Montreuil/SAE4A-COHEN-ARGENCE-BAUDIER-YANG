<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBurger"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Image Burger"
            android:scaleType="centerCrop"
            android:src="@drawable/burger_template" />

        <LinearLayout
            android:id="@+id/layoutDescBurger"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/nomBurger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/descriptionBurger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/gris"/>
        </LinearLayout>

        <TextView
            android:id="@+id/prixBurger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:gravity="center_vertical|end"
            android:layout_marginLeft="5dp"
            app:layout_constraintEnd_toStartOf="@id/layoutDescBurger"
           />

    </LinearLayout>

</androidx.cardview.widget.CardView>
