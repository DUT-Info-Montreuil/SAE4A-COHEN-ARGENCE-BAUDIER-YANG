<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="E-mail"
        android:text=""
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEmail"
        android:layout_margin="16dp"
        android:hint="Adresse"
        android:text=""
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAddress"
        android:layout_margin="16dp"
        android:hint="Prénom"
        android:text=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextFirstName"
        android:layout_margin="16dp"
        android:hint="Nom de famille"
        android:text=""
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLastName"
        android:layout_margin="16dp"
        android:hint="Numéro de téléphone"
        android:text=""
        android:inputType="phone" />

    <EditText
        android:id="@+id/editTextPseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPhoneNumber"
        android:layout_margin="16dp"
        android:hint="Pseudo"
        android:text=""
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonModif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPseudo"
        android:layout_margin="16dp"
        android:backgroundTint="@color/cheddar"
        android:text="Valider" />

    <Button
        android:id="@+id/buttonModifMpd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonModif"
        android:layout_margin="16dp"
        android:backgroundTint="@color/cheddar"
        android:text="Modifier le mot de passe" />

</RelativeLayout>
